@model ProjectBookworm.Models.UserManagementViewModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center" style="margin-top: 15vh; margin-bottom: 15vh;">
    <div class="col-10">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" id="userManagementTab" data-bs-toggle="tab" href="#userManagement">Zarządzaj użytkownikami</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="bookManagementTab" data-bs-toggle="tab" href="#bookManagement">Zarządzaj książkami</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="userManagement">
                        <partial name="_UserManagementPartial" model="Model" />
                    </div>
                    <div class="tab-pane fade" id="bookManagement">
                        <partial name="_BookManagementPartial" model="new Project_Bookworm.Models.Book()" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>